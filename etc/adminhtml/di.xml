<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <virtualType name="ClawRock\Faq\Ui\Component\Control\Category\DeleteButton" type="Magento\Backend\Ui\Component\Control\DeleteButton">
        <arguments>
            <argument name="confirmationMessage" xsi:type="string" translatable="true">Are you sure you want to delete this category?</argument>
            <argument name="idFieldName" xsi:type="const">ClawRock\Faq\Api\Data\CategoryInterface::CATEGORY_ID</argument>
            <argument name="deleteRoutePath" xsi:type="string">*/*/delete</argument>
            <argument name="sortOrder" xsi:type="number">20</argument>
        </arguments>
    </virtualType>

    <virtualType name="ClawRock\Faq\Ui\Component\Control\Question\DeleteButton" type="Magento\Backend\Ui\Component\Control\DeleteButton">
        <arguments>
            <argument name="confirmationMessage" xsi:type="string" translatable="true">Are you sure you want to delete this question?</argument>
            <argument name="idFieldName" xsi:type="const">ClawRock\Faq\Api\Data\QuestionInterface::QUESTION_ID</argument>
            <argument name="deleteRoutePath" xsi:type="string">*/*/delete</argument>
            <argument name="sortOrder" xsi:type="number">20</argument>
        </arguments>
    </virtualType>

    <virtualType name="ClawRock\Faq\Ui\Component\Control\Category\SaveSplitButton" type="Magento\Backend\Ui\Component\Control\SaveSplitButton">
        <arguments>
            <argument name="targetName" xsi:type="string">clawrock_faq_category_form.clawrock_faq_category_form</argument>
        </arguments>
    </virtualType>

    <virtualType name="ClawRock\Faq\Ui\Component\Control\Question\SaveSplitButton" type="Magento\Backend\Ui\Component\Control\SaveSplitButton">
        <arguments>
            <argument name="targetName" xsi:type="string">clawrock_faq_question_form.clawrock_faq_question_form</argument>
        </arguments>
    </virtualType>

</config>
